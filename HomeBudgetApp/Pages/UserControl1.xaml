<UserControl x:Class="HomeBudgetApp.Pages.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cpb="clr-namespace:CircularProgressBar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Helpers/styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <cpb:CircularProgressBar Grid.Row="2" StrokeThickness="15" Radius="100"
                                 Value="10" 
                                 Text="{Binding ProgressText,Mode=OneWay}"
                                 Style="{StaticResource CircularProgressBarStyle}"/>
    </Grid>
    
</UserControl>
